<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="XML" injector-id="xml">
      <display-name>BusinessCard</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("BusinessCard"))]]></place>
    </injection>
    <injection language="RegExp" injector-id="xml">
      <display-name>constructor-arg/@value</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("value")).withParent(xmlTag().withLocalName(string().equalTo("constructor-arg")).withNamespace(string().equalTo("http://www.springframework.org/schema/beans")))]]></place>
    </injection>
    <injection language="XML" injector-id="xml">
      <display-name>item</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("item"))]]></place>
    </injection>
  </component>
</application>